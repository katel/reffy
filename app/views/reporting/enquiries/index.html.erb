<div id="hours_breakdown">
	<div class="section left">
		<h2><%= minutes_to_hours(@enquiries.hours_today) %></h2>
		<span class="information">HOURS TODAY</span>
	</div>
	<div class="section">
		<h2><%= minutes_to_hours(@enquiries.hours_this_week) %></h2>
		<span class="information">HOURS THIS WEEK</span>
	</div>
	<div class="section right">
		<h2><%= minutes_to_hours(@enquiries.hours_this_month) %></h2>
		<span class="information">HOURS THIS MONTH</span>
	</div>
	<div class="clear"></div>
</div>
<% unless params[:project] %>
<h3>Hours by Project</h3>
<table width="100%" cellpadding="0" cellspacing="0">
	<tr>
		<th>Project</th>
		<th>Today</th>
		<th>This Week</th>
		<th>This Month</th>
		<th>This Year</th>
	</tr>
	<% @enquiries.tag_counts_on(:projects).each do |a| %>
		<tr class="<%= cycle("even", "odd") %>">
			<td class="title"><span class="important project"><%= a.name %></span></td>
			<td class="hours"><%= minutes_to_hours( @enquiries.since(Time.now.beginning_of_day).tagged_with(a, :on => :projects).sum(:duration_in_minutes)) %></td>
			<td class="hours"><%= minutes_to_hours( @enquiries.since(Time.now.beginning_of_week).tagged_with(a, :on => :projects).sum(:duration_in_minutes)) %></td>
			<td class="hours"><%= minutes_to_hours( @enquiries.since(Time.now.beginning_of_month).tagged_with(a, :on => :projects).sum(:duration_in_minutes)) %></td>
			<td class="hours"><%= minutes_to_hours( @enquiries.since(Time.now.beginning_of_year).tagged_with(a, :on => :projects).sum(:duration_in_minutes)) %></td>
    <% end %>
	<tr>
		<td class="title final"></td>
		<td class="hours final"><%= minutes_to_hours( @enquiries.since(Time.now.beginning_of_day).sum(:duration_in_minutes)) %></td>
		<td class="hours final"><%= minutes_to_hours( @enquiries.since(Time.now.beginning_of_week).sum(:duration_in_minutes)) %></td>
		<td class="hours final"><%= minutes_to_hours( @enquiries.since(Time.now.beginning_of_month).sum(:duration_in_minutes)) %></td>
		<td class="hours final"><%= minutes_to_hours( @enquiries.since(Time.now.beginning_of_year).sum(:duration_in_minutes)) %></td>
	</tr>
</table>
<% end %>
