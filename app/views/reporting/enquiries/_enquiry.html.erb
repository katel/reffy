<div class="enquiry <%= enquiry.created_at > Time.now.beginning_of_day ? "today" : "" %>">
	<p>
		<%= highlight(enquiry).html_safe %>
	</p>
	<div class="date"><%= enquiry.created_at.strftime("%a, %B %d, %Y") %></div>
	<div class="enquiry_control">
    	<%= link_to image_tag("edit.png"), edit_enquiry_path(enquiry) %> 
    	<%= link_to image_tag("delete.png"), enquiry, :confirm => 'Are you sure?', :method => :delete %>
    </div>
</div>